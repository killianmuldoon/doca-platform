write_files:
  - path: /etc/netplan/60-mlnx.yaml
    permissions: '0600'
    content: ""

  - path: /etc/netplan/99-dpf-comm-ch.yaml
    permissions: '0600'
    content: |
        network:
          renderer: networkd
          version: 2
          bridges:
            br-comm-ch:
