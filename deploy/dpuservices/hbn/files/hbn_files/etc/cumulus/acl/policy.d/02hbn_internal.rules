[iptables]
# mark packets to indicate ingress/egress direction for CPU trapped packets to ensure correct interface matching in ACLs
-t mangle -A PREROUTING -i p0_sf -j MARK --set-mark 777
-t mangle -A PREROUTING -i p1_sf -j MARK --set-mark 777

-t mangle -A PREROUTING -m mark ! --mark 777 -j MARK --set-mark 888

# reset reflexive ACL CONNMARK for non-transit traffic
-t filter -A INPUT -m connmark --mark 9999 -j CONNMARK --set-mark 0
-t filter -A INPUT -m connmark --mark 9997 -j CONNMARK --set-mark 0
-t filter -A INPUT -m connmark --mark 9995 -j CONNMARK --set-mark 0
-t filter -A OUTPUT -m connmark --mark 9998 -j CONNMARK --set-mark 0
-t filter -A OUTPUT -m connmark --mark 9996 -j CONNMARK --set-mark 0
-t filter -A OUTPUT -m connmark --mark 9994 -j CONNMARK --set-mark 0
